<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MigratioTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/CP</item>
        <item name="colorPrimaryDark">@color/CPD</item>
        <item name="colorAccent">@color/CA</item>
        <item name="android:windowBackground">@color/CPBG</item>
        <item name="android:navigationBarColor">@color/CP</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="android:contextPopupMenuStyle">
            @style/Widget.MaterialComponents.PopupMenu.ContextMenu
        </item>
        <item name="actionOverflowMenuStyle">
            @style/Widget.MaterialComponents.PopupMenu.Overflow
        </item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlNormal">@color/CA</item>
        <item name="android:textColorPrimary">@color/CAFG</item>
        <item name="android:textColorSecondary">@color/CAFG</item>
    </style>

    <style name="AlertDialogue" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/CAFG</item>
    </style>

    <style name="SearchViewTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:searchIcon">@drawable/search_1</item>
    </style>

    <style name="Switcher" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlActivated">@color/CAFG</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>
</resources>